@model IEnumerable<MVC_EF.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="container">
    <div class="row row-cols-4">
        @foreach (var item in Model)
        {<div class="col">
             <a>


                 <div class="card" style="width: 18rem;">
                     <div class="card-body">
                         <h5 class="card-title">@Html.DisplayFor(modelItem => item.FirstName)   @Html.DisplayFor(modelItem => item.LastName)</h5>
                         <h6 class="card-subtitle mb-2 text-muted">Favorite Color</h6>
                         <p class="card-text"> @Html.DisplayFor(modelItem => item.FavoriteColor).</p>
                         @Html.ActionLink("Details", "Details", new { id = item.StudentID })


                     </div>
                 </div>
                 </a>
            </div>

        }
    
    </div>
</div>
